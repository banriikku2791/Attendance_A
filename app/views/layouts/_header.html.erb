<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if params[:gamen] == "change" || params[:gamen] == "end" %>
      <%= link_to "勤怠システム", "#", id: "logo" %>
    <% else %>
      <%= link_to "勤怠システム", root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      <% if params[:gamen] == "change" || params[:gamen] == "end" %>
      <% else %>
        <% if logged_in? %>
          <li><%= link_to "トップへ", root_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "ユーザー一覧", users_path(key: 1) %></li>
            <li><%= link_to "出勤社員一覧", users_path(key: 2) %></li>
            <li><%= link_to "拠点情報の修正", bases_path %></li>
            <li><%= link_to "基本情報の修正", edit_basic_all_user_path(current_user) %></li>
          <% end %>    
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% unless current_user.admin? %>
                <li><%= link_to "勤怠", current_user %></li>
              <% end %>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "トップへ", root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      <% end %>
      </ul>
    </nav>
  </div>
</header>