<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day, chenge_mw: @select_area), local: true, method: :patch) do |f| %>
  <div>
    <h1>勤怠編集画面</h1>
    <table class="table table-bordered table-condensed table-hover table-striped" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @cnt = 0 %>
        <% @attendances.each do |day| %>
          <% @cnt += 1 %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <% if day.worked_on.wday == 0 %>
                <td class="txt-youbi-sun">
              <% elsif day.worked_on.wday == 6 %>
                <td class="txt-youbi-sat">
              <% else %>
                <td>
              <% end %>
              <%= $days_of_the_week[day.worked_on.wday] %></td>
              <% if Date.current < day.worked_on %>
                <td><%= attendance.time_field :started_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.time_field :finished_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.check_box :ck_tomorrow, disabled: true %></td>
              <% else %>
                <td><%= attendance.time_field :started_at, class: "form-control" %></td>
                <td><%= attendance.time_field :finished_at, class: "form-control" %></td>
                <td><%= attendance.check_box :ck_tomorrow %></td>
              <% end %>
              <td>
                <% if day.started_at.present? && day.finished_at.present? %>
                  <%= working_times(day.started_at, day.finished_at) %>
                <% end %>
              </td>
              <% if Date.current < day.worked_on %>
                <td><%= attendance.text_field :reason, readonly: true, class: "form-control" %></td>
                <td><%= attendance.select :employee_number, {}, {}, :disabled => true %></td>
              <% else %>
                <td><%= attendance.text_field :reason, class: "form-control" %></td>
                <td><%= attendance.select :employee_number, options_for_select(@user_superior,1), include_blank: true %></td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="center">
    <%= link_to "キャンセル", user_path(date: @first_day, chenge_mw: @select_area), class: "btn btn-lg btn-primary" %>
    <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>